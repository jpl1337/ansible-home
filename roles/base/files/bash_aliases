# aliases
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias aliases="vim ~/.bash_aliases && source ~/.bashrc"
alias ah='bash <(wget -qO - https://raw.githubusercontent.com/jpl1337/ansible-home/master/bootstrap.sh)'
alias back='cd $OLDPWD'
alias c='clear'
alias cd..='cd ..'
alias cp='cp -iv'
alias chmod="chmod -c"
alias chmod="chmod -c"
alias df='df -h -x squashfs -x tmpfs -x devtmpfs'
alias diff='colordiff'
alias egrep='egrep --colour=auto'
alias e="vim -O "
alias E="vim -o "
alias extip='curl icanhazip.com'
alias grep='grep --color=auto'
alias l.=' ls -lhFa --time-style=long-iso --color=auto'
alias ll=' ls'
alias ls=' ls -lhF --time-style=long-iso --color=auto'
alias lsmount='mount |column -t'
alias mkdir='mkdir -pv'
alias myip='dig TXT +short o-o.myaddr.l.google.com @ns1.google.com'
alias ports='netstat -tulanp'
alias h='history'
alias j='jobs -l'
alias mv='mv -iv'
alias n='ip a && ping -c1 1.1.1.1 && dig us-atlanta.privacy.network && ping -c1 google.com || revpn'
alias revpn='sudo systemctl restart openvpn'
alias sproxy='ssh -p 2099 -D 9090 -q -C -N -f jay@vpn.home-network.io'
alias ssha='eval $(ssh-agent) && ssh-add'
alias status='systemctl status'
alias step='gammastep -PO'
alias sure="sudo !!"
alias svim='sudo vim'
alias tn=' tmux new -s'
alias vdestroy='vagrant destroy'
alias vssh='vagrant ssh'
alias vup='vagrant up'
alias watch='watch -d'
alias weather='curl wttr.in'
alias wget='wget -c'
alias x="exit"

## get top process eating memory
alias mem5='ps auxf | sort -nr -k 4 | head -5'
alias mem10='ps auxf | sort -nr -k 4 | head -10'

## get top process eating cpu ##
alias cpu5='ps auxf | sort -nr -k 3 | head -5'
alias cpu10='ps auxf | sort -nr -k 3 | head -10'

## List largest directories (aka "ducks")
alias dir5='du -cksh * | sort -hr | head -n 5'
alias dir10='du -cksh * | sort -hr | head -n 10'

# Safetynets
# do not delete / or prompt if deleting more than 3 files at a time #
alias rm='rm -I --preserve-root'

# confirmation #
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

# Parenting changing perms on / #
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# reload bash config
alias reload="source ~/.bashrc"

# Manage packages easier
if [ -f /usr/bin/apt ]; then
  alias upgrade='sudo apt update && sudo apt dist-upgrade && sudo apt autoremove && sudo apt clean'
  alias up='sudo apt update'
  alias upup='sudo apt update ; sudo apt upgrade -y'
  alias updown='sudo apt update ; sudo apt upgrade -y ; sudo shutdown -h now'
  alias apti='sudo apt install -y'
  alias aptr='sudo apt remove'
  alias aptar="sudo apt autoremove"
fi

if [ -f /usr/bin/pacman ]; then
  alias update='sudo pacman -Syyy'
  alias upgrade='sudo pacman -Syu'
  alias install='sudo pacman -S'
fi

# WORK
alias cape='ssh cape.threatops.io -i ~/aws_key'
alias misp='ssh misp.threatops.io -i ~/aws_key'

# HOME
alias dev='ssh 192.168.69.80'

